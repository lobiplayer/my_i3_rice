vim.g.mapleader = " "

local keymap = vim.keymap -- for conciseness

-- general keymaps

keymap.set("i", "jk", "<ESC>") --in normal mode, js acts as escape key

keymap.set("n", "<leader>nh", ":nohl<CR>") --clear search highlights

-- keymap.set("n", "x", '"_x') --deletes, but doesn't store the letter in a register????

keymap.set("n", "<leader>+", "<C-a>") -- increase a number
keymap.set("n", "<leader>-", "<C-x>") -- decreae a number

